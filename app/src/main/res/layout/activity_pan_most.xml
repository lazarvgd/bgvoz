<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xor.bgvoz.PanMost"
    android:background="#CDB99C"
    android:orientation="vertical"
    android:paddingTop="16dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#330000"
        android:text="PANCEVACKI MOST->BATAJNICA"
        android:layout_marginBottom="15dp"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal"
        />


    <TextView
        android:id="@+id/stanica_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#330000"
        android:text="Stanica"
        android:textSize="15sp"
        android:layout_below="@+id/title"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal"/>
    <Spinner
        android:id="@+id/stanica_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/stanica_text"
        android:layout_below="@+id/title"
        android:layout_weight="0"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


    <TextView
        android:id="@+id/polazak_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#330000"
        android:text="Polazak"
        android:textSize="15sp"
        android:layout_below="@+id/stanica_text"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal"/>
    <Spinner
        android:id="@+id/polazak_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/polazak_text"
        android:layout_below="@+id/stanica_text"
        android:layout_weight="0"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <View
        android:id="@+id/hline"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#654334"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/polazak_spinner"
        android:layout_weight="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Polasci:"
        android:textSize="15sp"
        android:layout_below="@+id/hline"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingRight="16dp"
           android:paddingLeft="16dp"
           >


           <TextView
               android:id="@+id/pan_polasci"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:textSize="15sp"
               android:layout_marginTop="10dp"
               android:layout_weight="0"/>

       </LinearLayout>


   </ScrollView>


</LinearLayout>
